<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Update</title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <div class="topnav">
    <a href="/">Home</a>
    <a href="/create">News</a>
  </div>

  <div class="form">
    <form action="/update-user" method="post">
      <fieldset>
        <legend>Update a user:</legend>
        <div class="d-none">
          <label for="id">Id:</label>
          <input type="text" value="<%= userEdit.id %>" name="userId"><br><br>
        </div>
        <label for="email">Email:</label>
        <input type="email" value="<%= userEdit.email %>" name="email"><br><br>
        <label for="name">Name:</label>
        <input type="text" value="<%= userEdit.name %>" name="name"><br><br>
        <label for="city">City:</label>
        <input type="text" value="<%= userEdit.city %>" name="city"><br><br>
        <input type="submit" value="Submit">
      </fieldset>
    </form>
  </div>
</body>

</html>